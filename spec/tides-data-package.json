              ]
            },
            "path": {
              "title": "Path",
              "description": "A fully qualified URL, or a POSIX file path.",
              "type": "string",
              "pattern": "^(?=^[^./~])(^((?!\\.{2}).)*$).*$",
              "examples": [
                "{\n  \"path\": \"file.csv\"\n}\n",
                "{\n  \"path\": \"http://example.com/file.csv\"\n}\n"
              ],
              "context": "Implementations need to negotiate the type of path provided, and dereference the data accordingly."
            },
            "email": {
